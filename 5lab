#include<stdio.h>

main()
{
	float Sp,So;   //Sp-сумма положительных, So-отрицательных
	float m[10];
	int i;
	Sp=So=0;
	for(i=0;i<10;i++)
	{
		m[i]=5-(rand()%10);   //от пяти вычитается остаток от рандома ограниченного по 10 сверху, таким образом получаются рандомные числа от -4 до 5
		printf("%f\n",m[i]);
	}
	printf("\n");
	for(i=0;i<10;i++)
	{
		if (m[i]>=0)
		Sp=Sp+m[i];
		else
		So=So+abs(m[i]);
	}
	if (So<Sp)
	{
		for(i=0;i<10;i++)
		{
			if (m[i]<0)
			m[i]=0;
			printf("%f\n",m[i]);
		}
	}
	else
	{
		for(i=0;i<10;i++)
		printf("%f\n",m[i]);
	}
	getchar();
	return 0;
}
