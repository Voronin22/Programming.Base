#include <stdio.h>
int prov(char mass[], int m);

 main()
{
  float word,pos,chars,c,q;
  float SN;
  int i,F;
  char s[50];
  F=chars=word=0;  
  for(i=0; (c=s[i]=getchar())!=EOF; i++)
  {
  	if(c==' '|| c=='.'||c==','||c=='\t'||c=='\n')
  	{
  		F=0;
  		
  		 printf("%s  %d\n",s,i);
  		if (prov(s,i) == 1)
  		{
  			word = word - 1;
  			chars = chars - i;
  			printf("%f chars\n",chars);
		  }
  		i=(-1);
  	}
	    else 
	    {
	    	if(F==0 && ((c>='A' && c<='Z') || (c>='a' && c<='z'))){
			word++;
	    	F=1;
	               }
		    if (F==1)
			chars++;
		}
		if (c=='\n')
		break;
	}

	SN=chars / word;
	printf("generaly quantity of word is: %f\n", SN);
	//system("pause");
	return 0;	
}
int prov(char s[], int m)
{
	int F,i;
	
	F=0;
	for (i=0; i < m; i++)
	{
		if ((s[i]<'A' || s[i]>'Z') && (s[i]<'a' || s[i]>'z'))
		{
			F=1;
		}
	}
	return F;
}
